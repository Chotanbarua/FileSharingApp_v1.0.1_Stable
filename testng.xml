<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="FileSharingApp Parallel Suite"
       verbose="1"
       parallel="tests"
       thread-count="4">

    <!-- Parallel + Extent listener -->
    <listeners>
        <listener class-name="com.filesharingapp.tests.hooks.TestNGParallelListener"/>
        <listener class-name="com.filesharingapp.tests.listeners.ExtentTestListener"/>
    </listeners>

    <test name="Factory Browsers">
        <classes>
            <class name="com.filesharingapp.tests.runners.FactoryRunner"/>
        </classes>
    </test>

    <test name="Cucumber Parallel">
        <classes>
            <class name="com.filesharingapp.tests.runners.CucumberTestRunner"/>
        </classes>
    </test>
</suite>
